package br.ba.fvc.views;

import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JSeparator;
import javax.swing.JPanel;
import javax.swing.border.TitledBorder;
import javax.swing.border.EtchedBorder;
import java.awt.Color;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JTable;
import javax.swing.table.DefaultTableModel;
import javax.swing.JScrollPane;

public class ListarVendaView {

	private JFrame frame;
	private JTable table;
	private JTextField textField;
	private JTextField textField_1;
	private JTextField textField_2;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					ListarVendaView window = new ListarVendaView();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public ListarVendaView() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 862, 613);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);

		JSeparator separator_1 = new JSeparator();
		separator_1.setBounds(10, 37, 826, 14);
		frame.getContentPane().add(separator_1);

		JScrollPane scrollPane = new JScrollPane();
		scrollPane.setBounds(10, 192, 654, 278);
		frame.getContentPane().add(scrollPane);

		table = new JTable();
		scrollPane.setViewportView(table);
		table.setModel(new DefaultTableModel(new Object[][] {},
				new String[] { "Nome", "CPF", "Data partida", "Hora partida", "Rota" }));

		textField = new JTextField();
		textField.setToolTipText("");
		textField.setBounds(10, 79, 129, 20);
		frame.getContentPane().add(textField);
		textField.setColumns(10);

		textField_1 = new JTextField();
		textField_1.setColumns(10);
		textField_1.setBounds(157, 79, 129, 20);
		frame.getContentPane().add(textField_1);

		JLabel lblPesquisarPorPeriodo = new JLabel("Pesquisar por periodo");
		lblPesquisarPorPeriodo.setBounds(10, 54, 118, 14);
		frame.getContentPane().add(lblPesquisarPorPeriodo);

		JButton btnNewButton = new JButton("Pesquisar");
		btnNewButton.setBounds(299, 78, 89, 23);
		frame.getContentPane().add(btnNewButton);

		textField_2 = new JTextField();
		textField_2.setBounds(10, 131, 276, 20);
		frame.getContentPane().add(textField_2);
		textField_2.setColumns(10);

		JLabel lblPesquisarPorRoteiro = new JLabel("Pesquisar por rota");
		lblPesquisarPorRoteiro.setBounds(10, 106, 118, 14);
		frame.getContentPane().add(lblPesquisarPorRoteiro);

		JButton btnNewButton_1 = new JButton("Pesquisar");
		btnNewButton_1.setBounds(299, 130, 89, 23);
		frame.getContentPane().add(btnNewButton_1);

		JButton home = new JButton("Home");
		home.setBounds(10, 11, 89, 23);
		frame.getContentPane().add(home);
		
		frame.setLocationRelativeTo(frame);
	}
}
