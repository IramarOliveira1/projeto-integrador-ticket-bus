	 * @param user
	 */
	public ListarFuncionarioView(LoginController fields) {
		GenericController generic = new GenericController();
		this.list = generic.all("Usuario");
		// System.out.println("tela funcionario " + this.list[0][2]);

		this.user = fields;
		initialize();
	}

	private void home() {
		MenuView menu = new MenuView(this.user);
		menu.setVisible(true);
		frame.dispose();
	}

	private void cadastrar() {
		CadastrarFuncionarioView cadastrar = new CadastrarFuncionarioView();
		cadastrar.setVisible(true);
	}

