package br.ba.fvc.views;

import java.awt.EventQueue;
import javax.swing.ImageIcon;

import javax.swing.JFrame;
import javax.swing.JLabel;
import java.awt.Font;
import java.net.URL;

import javax.swing.JTextField;
import javax.swing.JButton;
import java.awt.Color;
import javax.swing.JPasswordField;

public class LoginView {

	private JFrame frame;
	private JTextField textField;
	private JPasswordField passwordField;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					LoginView window = new LoginView();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public LoginView() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 862, 613);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		JLabel lblNewLabel = new JLabel("Login");
		lblNewLabel.setFont(new Font("Tahoma", Font.PLAIN, 15));
		lblNewLabel.setBounds(293, 175, 141, 40);
		frame.getContentPane().add(lblNewLabel);
		
		textField = new JTextField();
		textField.setBounds(293, 219, 295, 34);
		frame.getContentPane().add(textField);
		textField.setColumns(10);
		
		JLabel lblNewLabel_1 = new JLabel("Senha");
		lblNewLabel_1.setFont(new Font("Tahoma", Font.PLAIN, 15));
		lblNewLabel_1.setBounds(293, 264, 46, 14);
		frame.getContentPane().add(lblNewLabel_1);
		
		JButton btnNewButton = new JButton("Entrar");
		btnNewButton.setBounds(293, 348, 295, 34);
		frame.getContentPane().add(btnNewButton);
		
		// Crie um objeto JLabel sem texto
		JLabel lblNewLabel_2 = new JLabel();
		lblNewLabel_2.setBackground(new Color(192, 192, 192));
		lblNewLabel_2.setForeground(new Color(192, 192, 192));

		// Defina o tamanho e a posição do JLabel
		lblNewLabel_2.setBounds(102, 26, 243, 59);
		
		
		
		// Crie um objeto ImageIcon com a imagem desejada
		ImageIcon imageIcon = new ImageIcon("logo-dark.png");
		
	

		// Defina o ícone do JLabel com o objeto ImageIcon criado anteriormente
		lblNewLabel_2.setIcon(new ImageIcon("C:\\Users\\D Paula\\Desktop\\JAVA\\views\\img\\logo-dark.png"));

		// Adicione o JLabel ao conteúdo do JFrame
		frame.getContentPane().add(lblNewLabel_2);
		
		passwordField = new JPasswordField();
		passwordField.setBounds(293, 290, 295, 34);
		frame.getContentPane().add(passwordField);
		
		JLabel lblNewLabel_3 = new JLabel();
		URL urlToImage = this.getClass().getResource("/public/ticketbus-logo-blue.png");
		lblNewLabel_3.setIcon(new ImageIcon(urlToImage));
				
		lblNewLabel_3.setBounds(42, 86, 46, 14);
		frame.getContentPane().add(lblNewLabel_3);

	}
}
