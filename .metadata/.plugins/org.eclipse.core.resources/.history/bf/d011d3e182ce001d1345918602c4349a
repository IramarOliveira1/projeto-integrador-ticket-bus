package br.ba.fvc.views;

import java.awt.EventQueue;


import javax.swing.JFrame;
import javax.swing.JOptionPane;
import javax.swing.JTextField;

import br.ba.fvc.controllrs.LoginController;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.net.URL;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.awt.event.ActionEvent;
import javax.swing.JLabel;
import javax.swing.ImageIcon;

public class LoginView2 {

	private JFrame frame;
	private JTextField email;
	private JTextField senha;
	private JLabel label;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					LoginView2 window = new LoginView2();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	private void loginView() {

		try {
			LoginController fields = new LoginController();

			fields.setEmail(email.getText());
			fields.setSenha(senha.getText());

			ResultSet result = fields.login();
			
			System.out.println(result);

			if (result.next()) {
				fields.setNome(result.getString(2));
				fields.setCargo(result.getString(3));
				fields.setEmail(result.getString(4));
				fields.setSenha(result.getString(5));

				TesteView window = new TesteView(fields);
				
				window.setVisible(true);

				frame.dispose();

			} else {
				JOptionPane.showMessageDialog(null, "LOGIN OU SENHA INVALIDOS!");
				System.out.println();
			}

		} catch (SQLException e) {
			JOptionPane.showMessageDialog(null, e.getMessage());
		}

	}

	/**
	 * Create the application.
	 */
	public LoginView2() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 859, 609);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);

		email = new JTextField("teste@teste.com");
		email.setBounds(306, 163, 324, 39);
		frame.getContentPane().add(email);
		email.setColumns(10);

		senha = new JTextField("123456");
		senha.setBounds(306, 248, 324, 39);
		frame.getContentPane().add(senha);
		senha.setColumns(10);

		JButton btnEntrar = new JButton("New button");
		btnEntrar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				loginView();
			}
		});
		btnEntrar.setBounds(375, 339, 89, 23);
		frame.getContentPane().add(btnEntrar);
		
		label = new JLabel();
		
		URL urlToImage = this.getClass().getResource("/public/ticketbus-logo-blue.png");
		label.setIcon(new ImageIcon(urlToImage));
		label.setBounds(56, 0, 704, 125);
		frame.getContentPane().add(label);
	
	}
}
