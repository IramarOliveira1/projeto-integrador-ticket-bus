package br.ba.fvc.controllrs;

import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.Iterator;
import java.util.Vector;

import br.ba.fvc.dao.GenericDAO;

public class GenericController {

	public GenericDAO dao;

	public GenericController() {
		this.dao = new GenericDAO();
	}

	public Vector<Vector<Object>> all(String table) {
		ResultSet result = null;
		//ArrayList<Object> list = new ArrayList<>();
		Vector<Vector<Object>> list = new Vector<Vector<Object>>();

		try {
			result = this.dao.all(table);

			while (result.next()) {
				
				 Vector<Object> vector = new Vector<Object>();
//				ArrayList<Object> vector = new ArrayList<>();

				for (int i = 1; i < result.getMetaData().getColumnCount(); i++) {

					vector.add(result.getObject(i));
				}
				list.add(vector);
			}

		} catch (Exception e) {
			System.out.println(e.getMessage());
		}


		System.out.println(list);

//		System.out.println(list);

		// System.out.println(data[1]);

		// System.out.println(data[0][1]);
		// System.out.println(data[0][2]);

		// System.out.println(data[0][1]);

		return list;
	}
}
